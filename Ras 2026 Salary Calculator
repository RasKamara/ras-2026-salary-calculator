    },
    17: {
      1: 4679.97, 2: 4761.55, 3: 4841.46, 4: 4922.74,
      5: 5006.42, 6: 5090.53, 7: 5178.10, 8: 5266.53,
      9: 5354.43
    },
    16: {
      1: 4159.09, 2: 4232.79, 3: 4301.70, 4: 4374.81,
      5: 4451.18, 6: 4526.83, 7: 4601.76, 8: 4679.97,
      9: 4761.55, 10: 4841.46, 11: 4922.74
    },
    15: {
      1: 3696.16, 2: 3758.99, 3: 3822.90, 4: 3887.89,
      5: 3953.98, 6: 4021.19, 7: 4089.56, 8: 4159.09,
      9: 4232.79, 10: 4301.70, 11: 4374.81
    }
  };

  function formatWithCommas(number) {
    return number.toLocaleString('en-US', {
      style: 'currency',
      currency: 'GHS'
    });
  }

  function calculate() {
    var level = parseInt(document.getElementById("salaryLevelInput").value);
    var step  = parseInt(document.getElementById("stepInput").value);

    if (salaryData[level] && salaryData[level][step]) {

      var X = salaryData[level][step];

      var allowances = (level >= 23 && level <= 25) ? 6183.53 : 0;

      var IP  = 0.15 * X;
      var ISA = 0.18 * X;
      var GMA = 0.20 * X;

      var GS = X + IP + ISA + GMA + allowances;

      var SN = 0.055 * X;
      var TT = 0.05 * X;
      var CF = 0.02 * X;
      var CD = 0.02 * X;

      var slabs = [402, 110, 130, 3000, 16395, 29963, 50000];
      var rates = [0, 0.05, 0.10, 0.175, 0.25, 0.30, 0.35];

      var incomeTax = 0;
      var chargeableIncome = GS - SN - TT;

      for (var i = 0; i < slabs.length; i++) {
        if (chargeableIncome <= 0) break;
        var taxable = Math.min(chargeableIncome, slabs[i]);
        incomeTax += taxable * rates[i];
        chargeableIncome -= taxable;
      }

      var NS = GS - SN - TT - CF - CD - incomeTax;

      document.getElementById("ip").value = formatWithCommas(IP);
      document.getElementById("isa").value = formatWithCommas(ISA);
      document.getElementById("gma").value = formatWithCommas(GMA);
      document.getElementById("gs").value = formatWithCommas(GS);
      document.getElementById("sn").value = formatWithCommas(SN);
      document.getElementById("tt").value = formatWithCommas(TT);
      document.getElementById("cf").value = formatWithCommas(CF);
      document.getElementById("cd").value = formatWithCommas(CD);
      document.getElementById("ic").value = formatWithCommas(incomeTax);
      document.getElementById("ns").value = formatWithCommas(NS);

      document.querySelectorAll('.output-field').forEach(f => f.style.display = 'block');
      document.getElementById("errorMessage").style.display = 'none';

    } else {
      document.getElementById("errorMessage").textContent =
        "Invalid salary level or step. Please check your entries.";
      document.getElementById("errorMessage").style.display = 'block';
    }
  }
</script>

